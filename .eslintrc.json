{
  "env": {
    "es6": true,
    "node": true
  },
  "plugins": [
    "hapi"
  ],
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "eol-last": [
      "error",
      "always"
    ],
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "hapi/hapi-capitalize-modules": 2,
    "hapi/hapi-scope-start": 2
  }
}
